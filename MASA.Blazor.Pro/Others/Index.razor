<MSubheader>Others</MSubheader>

<MListItem Link Href="/others/access-control">
    <MListItemIcon>
        <MIcon>fas fa-shield-alt</MIcon>
    </MListItemIcon>
    <MListItemContent>
        <MListItemTitle Class="subtitle-1">Access Control</MListItemTitle>
    </MListItemContent>
</MListItem>

<MListGroup PrependIcon="fas fa-list">
    <ActivatorContent>
        <MListItemTitle Class="subtitle-1">Menu Levels</MListItemTitle>
    </ActivatorContent>
    <ChildContent>
        <MListGroup NoAction SubGroup>
            <ActivatorContent>
                <MListItemContent>
                    <MListItemTitle Class="subtitle-1">Menu 1</MListItemTitle>
                </MListItemContent>
            </ActivatorContent>
            <ChildContent>
                @foreach (var item in _admins)
                {
                    <MListItem Link>
                        <MListItemTitle Class="subtitle-1">@item.Text</MListItemTitle>

                        <MListItemIcon>
                            <MIcon>@item.Icon</MIcon>
                        </MListItemIcon>
                    </MListItem>
                }
            </ChildContent>
        </MListGroup>

        <MListGroup NoAction SubGroup>
            <ActivatorContent>
                <MListItemContent>
                    <MListItemTitle Class="subtitle-1">Menu 2</MListItemTitle>
                </MListItemContent>
            </ActivatorContent>
            <ChildContent>
                @foreach (var item in _cruds)
                {
                    <MListItem Link>
                        <MListItemTitle Class="subtitle-1">@item.Text</MListItemTitle>

                        <MListItemIcon>
                            <MIcon>@item.Icon</MIcon>
                        </MListItemIcon>
                    </MListItem>
                }
            </ChildContent>
        </MListGroup>
    </ChildContent>
</MListGroup>

@code {
    private Item[] _admins = new Item[]
        {
       new Item { Text= "Menu 1.1", Icon= "mdi-account-multiple-outline" },
       new Item { Text= "Menu 1.2", Icon= "mdi-cog-outline" }
        };

    private Item[] _cruds = new Item[]
    {
       new Item { Text= "Menu 2.1", Icon= "mdi-plus-outline" },
       new Item { Text= "Menu 2.2", Icon= "mdi-file-outline" },
       new Item { Text= "Menu 2.3", Icon= "mdi-update" },
       new Item { Text= "Menu 2.4", Icon= "mdi-delete" }
    };

    class Item
    {
        public string Text { get; set; }
        public string Icon { get; set; }
    }
}
