@namespace MASA.Blazor.Pro.Demo

<MNavigationDrawer Permanent Class="rounded-4" Width="300">
    <MButton Class="ma-6 rounded-pill" Style="width:-webkit-fill-available;" Dark Color="pry" OnClick="()=>_visible = true">Add Task</MButton>
    <MList Linkage Dense>
        <MListItemGroup>
            <MListItem Style="height:38px;" Class="px-6" Link Href="/apps/todo">
                <ItemContent>
                    <MListItemIcon Class="mr-2">
                        <MIcon Size=18>mdi-email-outline</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="@(!context.Active ? "text-body neutral-lighten-4--text" : "text-subtitle pry--text")">My Task</MListItemTitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>
            <MListItem Style="height:38px;" Class="px-6" Link Href="/apps/todo/important">
                <ItemContent>
                    <MListItemIcon Class="mr-2">
                        <MIcon Size=18>mdi-star-outline</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="@(!context.Active ? "text-body neutral-lighten-4--text" : "text-subtitle pry--text")">Important</MListItemTitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>
            <MListItem Style="height:38px;" Class="px-6" Link Href="/apps/todo/completed">
                <ItemContent>
                    <MListItemIcon Class="mr-2">
                        <MIcon Size=18>mdi-check</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="@(!context.Active ? "text-body neutral-lighten-4--text" : "text-subtitle pry--text")">Completed</MListItemTitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>
            <MListItem Style="height:38px;" Class="px-6" Link Href="/apps/todo/deleted">
                <ItemContent>
                    <MListItemIcon Class="mr-2">
                        <MIcon Size=18>mdi-delete-outline</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="@(!context.Active ? "text-body neutral-lighten-4--text" : "text-subtitle pry--text")">Deleted</MListItemTitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>

            <MRow NoGutters Justify="JustifyTypes.SpaceBetween">
                <MSubheader Class="px-6 my-6 text-subtitle neutral-lighten-4--text">Tags</MSubheader>
                <MIcon Class="px-6 my-6" Small Color="#A3AED0">fas fa-plus</MIcon>
            </MRow>

            <MListItem Style="height:38px;" Class="px-6" Link Href="/apps/todo/team">
                <ItemContent>
                    <MListItemIcon Class="mr-2">
                        <MIcon XSmall Color="purple">fas fa-circle</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="@(!context.Active ? "text-body neutral-lighten-4--text" : "text-subtitle pry--text")">Team</MListItemTitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>
            <MListItem Style="height:38px;" Class="px-6" Link Href="/apps/todo/low">
                <ItemContent>
                    <MListItemIcon Class="mr-2">
                        <MIcon XSmall Color="teal">fas fa-circle</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="@(!context.Active ? "text-body neutral-lighten-4--text" : "text-subtitle pry--text")">Low</MListItemTitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>
            <MListItem Style="height:38px;" Class="px-6" Link Href="/apps/todo/medium">
                <ItemContent>
                    <MListItemIcon Class="mr-2">
                        <MIcon XSmall Color="orange">fas fa-circle</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="@(!context.Active ? "text-body neutral-lighten-4--text" : "text-subtitle pry--text")">Medium</MListItemTitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>
            <MListItem Style="height:38px;" Class="px-6" Link Href="/apps/todo/high">
                <ItemContent>
                    <MListItemIcon Class="mr-2">
                        <MIcon XSmall Color="red">fas fa-circle</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="@(!context.Active ? "text-body neutral-lighten-4--text" : "text-subtitle pry--text")">High</MListItemTitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>
            <MListItem Style="height:38px;" Class="px-6" Link Href="/apps/todo/update">
                <ItemContent>
                    <MListItemIcon Class="mr-2">
                        <MIcon XSmall Color="cyan">fas fa-circle</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="@(!context.Active ? "text-body neutral-lighten-4--text" : "text-subtitle pry--text")">Update</MListItemTitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>
        </MListItemGroup>
    </MList>
</MNavigationDrawer>

<TodoDetail @bind-Value="_visible" SelectItem=null></TodoDetail>

@code {
    public bool _visible { get; set; }
}
