<MNavigationDrawer Absolute>
    <MList Dense>
        <MListItem Class="ma-2">
            <MButton Dark Block Color="#7367f0" OnClick="()=>_visible = true">Add Task</MButton>
        </MListItem>

        <MListItem Link Href="/apps/todo">
            <MListItemIcon>
                <MIcon Small>fas fa-tasks</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle Class="subtitle-1">My Task</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/apps/todo/important">
            <MListItemIcon>
                <MIcon Small>far fa-star</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle Class="subtitle-1">Important</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/apps/todo/completed">
            <MListItemIcon>
                <MIcon Small>fas fa-check</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle Class="subtitle-1">Completed</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/apps/todo/deleted">
            <MListItemIcon>
                <MIcon Small>far fa-trash-alt</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle Class="subtitle-1">Deleted</MListItemTitle>
            </MListItemContent>
        </MListItem>

        <MSubheader>Tags</MSubheader>

        <MListItem Link Href="/apps/todo/team">
            <MListItemIcon>
                <MIcon XSmall Color="purple">fas fa-circle</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle Class="subtitle-1">Team</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/apps/todo/low">
            <MListItemIcon>
                <MIcon XSmall Color="teal">fas fa-circle</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle Class="subtitle-1">Low</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/apps/todo/medium">
            <MListItemIcon>
                <MIcon XSmall Color="orange">fas fa-circle</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle Class="subtitle-1">Medium</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/apps/todo/high">
            <MListItemIcon>
                <MIcon XSmall Color="red">fas fa-circle</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle Class="subtitle-1">High</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/apps/todo/update">
            <MListItemIcon>
                <MIcon XSmall Color="cyan">fas fa-circle</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle Class="subtitle-1">Update</MListItemTitle>
            </MListItemContent>
        </MListItem>
    </MList>

</MNavigationDrawer>

<TodoDetail @bind-Value="_visible" SelectItem=null></TodoDetail>

@code {
    public bool _visible { get; set; }
}
