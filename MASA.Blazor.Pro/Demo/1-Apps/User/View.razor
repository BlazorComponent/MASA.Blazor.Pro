@page "/apps/user/view"
@page "/apps/user/view/{Id}"
@inherits DemoCompontentBase
@using MASA.Blazor.Pro.Data.User

<MRow>
    <MCol Md="9">
        <MCard>
            <MCardText>
                <MRow>
                    <MCol Md="6">
                        <div class="d-flex justify-content-start">
                            <MAvatar Color="primary" Size="104" Tile>
                                <MImage Src="@_userData.HeadImg" />
                            </MAvatar>
                            <div class="d-flex flex-column ml-2">
                                <div class="mb-1">
                                    <MListItem TwoLine class="pl-0 mt-n3">
                                        <MListItemContent>
                                            <MListItemTitle>@_userData.FullName</MListItemTitle>
                                            <MListItemSubtitle>@_userData.Email</MListItemSubtitle>
                                        </MListItemContent>
                                    </MListItem>
                                </div>
                                <div class="d-flex flex-wrap">
                                    <MButton class="primary">Edit</MButton>
                                    <MButton Outlined Color="red" class="ml-1">Delete</MButton>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <div class="d-flex align-items-center mr-2 rounded">
                                <span class="deep-purple lighten-4 deep-purple--text text--lighten-2 rounded text-center vertical-center" style="width:35px">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-dollar-sign"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
                                </span>
                                <div class="ml-1">
                                    <h5 class="mb-0 font-weight-medium">@_userData.Sales</h5>
                                    <small>Monthly Sales</small>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="green lighten-4 green--text text--darken-1 rounded text-center vertical-center" style="width:35px">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trending-up"><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline><polyline points="17 6 23 6 23 12"></polyline></svg>
                                </span>
                                <div class="ml-1">
                                    <h5 class="mb-0 font-weight-medium">@_userData.Profit</h5>
                                    <small>Annual Profit</small>
                                </div>
                            </div>
                        </div>
                    </MCol>
                    <MCol Md="6">
                        <MSimpleTable Dense class="mt-2 mt-xl-0">
                            <tbody>
                                <tr>
                                    <td>Username</td>
                                    <td>@_userData.UserName</td>
                                </tr>
                                <tr>
                                    <td>Status</td>
                                    <td>@_userData.Status</td>
                                </tr>
                                <tr>
                                    <td>Role</td>
                                    <td>@_userData.Role</td>
                                </tr>
                                <tr>
                                    <td>Country</td>
                                    <td>@_userData.Country</td>
                                </tr>
                                <tr>
                                    <td>Contact</td>
                                    <td>@_userData.Contact</td>
                                </tr>
                            </tbody>
                        </MSimpleTable>
                    </MCol>
                </MRow>
            </MCardText>
        </MCard>
    </MCol>
    <MCol Md="3">
        <MCard>
            <MCardText>
                <MRow>
                    <MCol Md="@("auto")">
                        <MListItem TwoLine class="pl-0 mt-n3">
                            <MListItemContent>
                                <MListItemTitle>Current Plan</MListItemTitle>
                                <MListItemSubtitle>July 22, 2021</MListItemSubtitle>
                            </MListItemContent>
                        </MListItem>
                    </MCol>
                    <MSpacer />
                    <MCol Md="@("auto")">
                        <MChip Small class="primary--text"> @_userData.Plan </MChip>
                    </MCol>
                </MRow>
                <ul class="list-unstyled pl-0">
                    <li>5 Users</li>
                    <li>10 GB storage</li>
                    <li>Basic Support</li>
                </ul>
            </MCardText>
            <MCardActions>
                <MButton Block class="primary text-capitalize">Upgrade Plan</MButton>
            </MCardActions>
        </MCard>
    </MCol>
</MRow>

<MRow>
    <MCol Md="6">
        <MCard>
            <MCardTitle>
                User Timeline
            </MCardTitle>
            <MCardText>
                <MTimeline Dense Clipped>
                    <MTimelineItem Class="mt-0" Color="purple darken-3" Small>
                        <MRow Justify="JustifyTypes.SpaceBetween">
                            <MCol Cols="7">
                                <h4>
                                    12 Invoices have been paid
                                </h4>
                                <span>
                                    Invoices have been paid to the company.
                                </span>
                                <p>
                                    <img class="mr-1" width="20" src="data:image/png;base64," />
                                    <span class="align-bottom">invoice.pdf</span>
                                </p>
                            </MCol>
                            <MCol Class="text-right" Cols="5">
                                12 min ago
                            </MCol>
                        </MRow>
                    </MTimelineItem>

                    <MTimelineItem Class="mb-4" Small Color="orange lighten-1">
                        <MRow Justify="JustifyTypes.SpaceBetween">
                            <MCol Cols="7">
                                <h4>Client Meeting</h4>
                                <span>
                                    Project meeting with john @@10:15am.
                                </span>
                                <MListItem Class="grow">
                                    <MListItemAvatar Color="deep-purple lighten-1">
                                        <MImage Src="https://avataaars.io/?avatarStyle=Transparent&topType=ShortHairShortCurly&accessoriesType=Prescription02&hairColor=Black&facialHairType=Blank&clotheType=Hoodie&clotheColor=White&eyeType=Default&eyebrowType=DefaultNatural&mouthType=Default&skinColor=Light">
                                        </MImage>
                                    </MListItemAvatar>
                                    <MListItemContent>
                                        <MListItemTitle>John Doe (Client)</MListItemTitle>
                                        <MListItemSubtitle>CEO of Infibeam</MListItemSubtitle>
                                    </MListItemContent>
                                </MListItem>
                            </MCol>
                            <MCol Class="text-right" Cols="5">
                                45 min ago
                            </MCol>
                        </MRow>
                    </MTimelineItem>

                    <MTimelineItem Class="mb-4" Color="cyan lighten-1" Small>
                        <MRow Justify="JustifyTypes.SpaceBetween">
                            <MCol Cols="7">
                                <h4>
                                    Create a new project for client
                                </h4>
                                <span>
                                    Add files to new design folder
                                </span>
                            </MCol>
                            <MCol Class="text-right" Cols="5">
                                2 days ago
                            </MCol>
                        </MRow>
                    </MTimelineItem>
                </MTimeline>
            </MCardText>
        </MCard>
    </MCol>
    <MCol Md="6">
        <MCard>
            <MCardTitle>
                Permissions
            </MCardTitle>
            <MCardSubtitle>
                Permission according to roles
            </MCardSubtitle>
            <MCardText>
                <MDataTable Stripe HideDefaultFooter Headers="_headers" Items="_permissions" ItemKey="r=>r.Module">
                    <ItemColContent>
                        @if (context.Header.Value == nameof(Permission.Module))
                        {
                            @context.Value
                        }
                        else
                        {
                            var value = context.Item.GetType().GetProperty(context.Header.Value)?.GetValue(context.Item, null);
                            <MSimpleCheckbox Value="(bool)(value??false)" Disabled></MSimpleCheckbox>
                        }
                    </ItemColContent>
                </MDataTable>
            </MCardText>
        </MCard>
    </MCol>
</MRow>

<MASA.Blazor.Pro.Components.InvoiceList />

@code {
     public override string Name { get; } = "User-View";

    [Parameter]
    public string? Id { get; set; }

    public UserData _userData;

    protected override void OnParametersSet()
    {
        _userData = UserService.UserDatas.FirstOrDefault(u => u.Id == Id) ?? UserService.UserDatas.First();
    }

    private List<DataTableHeader<Permission>> _headers = new List<DataTableHeader<Permission>>
    {
        new (){ Text= "MODULE", Sortable= false, Value= nameof(Permission.Module)},
        new (){ Text= "READ", Sortable= false, Value= nameof(Permission.Read)},
        new (){ Text= "WRITE", Sortable= false, Value= nameof(Permission.Write)},
        new (){ Text= "CREATE", Sortable= false, Value= nameof(Permission.Create)},
        new (){ Text= "DELETE", Sortable= false, Value= nameof(Permission.Delete)}
    };

    private List<Permission> _permissions = UserService.Permissions;
}