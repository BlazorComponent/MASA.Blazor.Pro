@page "/apps/ecommerce/order"
@inherits DemoCompontentBase

<MTabs @bind-Value="_curTab" SliderColor="transparent" class="pro-nav">
    <MTab class="text-capitalize">
        <MIcon>mdi-cart</MIcon>
        <span class="pro-nav-title">Card</span>
    </MTab>
    <MTab class="text-capitalize" Disabled="_addressDisabled">
        <MIcon>mdi-home</MIcon>
        <span class="pro-nav-title">Address</span>
    </MTab>
    <MTab class="text-capitalize" Disabled="_paymentDisabled">
        <MIcon>mdi-credit-card-outline</MIcon>
        <span class="pro-nav-title">Payment</span>
    </MTab>
</MTabs>

<MTabsItems Value="_curTab">
    <MTabItem>
        <Cart @bind-Step="_curTab" @bind-Disabled="_addressDisabled"/>
    </MTabItem>
    <MTabItem>
        <Address @bind-Step="_curTab" @bind-Disabled="_paymentDisabled"/>
    </MTabItem>
    <MTabItem>
        <Payment />
    </MTabItem>
</MTabsItems>

@code {
    public override string Name => "Apps-ECommerce-Checkout";
    StringNumber _curTab = 0;
    bool _addressDisabled = true;
    bool _paymentDisabled = true;
}
