@code {
    public override string Name { get; } = "invoice_preview";

    [Parameter]
    public int? Id { get; set; }

    InvoiceRecord? _invoiceRecord;

    public InvoiceRecord InvoiceRecord => _invoiceRecord ?? (_invoiceRecord = InvoiceService._invoiceRecords.FirstOrDefault(i => i.Id == Id)??InvoiceService._invoiceRecords.First());

    bool _showSendInvoice;

    bool _showAddPayment;

    void NavigateToEdit()
    {
        NavigationManager.NavigateTo($"apps/invoice/edit/{Id??0}");
    }
}
