<MSubheader>Components</MSubheader>

<MListGroup PrependIcon="far fa-window-maximize">
    <ActivatorContent>
        <MListItemTitle Class="subtitle-1">Cards</MListItemTitle>
    </ActivatorContent>
    <ChildContent>
        <MListItem Link Href="/components/cards/card-basic">
            <MListItemIcon Class="mx-3">
                <MIcon> fas fa-genderless </MIcon>
            </MListItemIcon>
            <MListItemContent Class="mx-3">
                <MListItemTitle Class="subtitle-1">Basic</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/components/cards/card-advance">
            <MListItemIcon Class="mx-3">
                <MIcon>fas fa-genderless</MIcon>
            </MListItemIcon>
            <MListItemContent Class="mx-3">
                <MListItemTitle Class="subtitle-1">Advance</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/components/cards/statistic">
            <MListItemIcon Class="mx-3">
                <MIcon> fas fa-genderless </MIcon>
            </MListItemIcon>
            <MListItemContent Class="mx-3">
                <MListItemTitle Class="subtitle-1">Statistic</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/components/cards/analytic">
            <MListItemIcon Class="mx-3">
                <MIcon> fas fa-genderless </MIcon>
            </MListItemIcon>
            <MListItemContent Class="mx-3">
                <MListItemTitle Class="subtitle-1">Analytics</MListItemTitle>
            </MListItemContent>
        </MListItem>
    </ChildContent>
</MListGroup>

<MListGroup PrependIcon="far fa-window-maximize">
    <ActivatorContent>
        <MListItemTitle Class="subtitle-1">Tables</MListItemTitle>
    </ActivatorContent>
    <ChildContent>
        <MListItem Link Href="/components/table/bs-table">
            <MListItemIcon Class="mx-3">
                <MIcon> fas fa-genderless </MIcon>
            </MListItemIcon>
            <MListItemContent Class="mx-3">
                <MListItemTitle Class="subtitle-1">BS Table</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MListItem Link Href="/components/table/good-table">
            <MListItemIcon Class="mx-3">
                <MIcon>fas fa-genderless</MIcon>
            </MListItemIcon>
            <MListItemContent Class="mx-3">
                <MListItemTitle Class="subtitle-1">Good Table</MListItemTitle>
            </MListItemContent>
        </MListItem>
    </ChildContent>
</MListGroup>

<MListGroup PrependIcon="fas fa-cube">
    <ActivatorContent>
        <MListItemTitle Class="subtitle-1">Baics</MListItemTitle>
    </ActivatorContent>
    <ChildContent>
        @foreach (var item in basics)
        {
            <MListItem Link Href=@item.Link>
                <MListItemIcon Class="mx-3">
                    <MIcon> fas fa-genderless </MIcon>
                </MListItemIcon>
                <MListItemContent Class="mx-3">
                    <MListItemTitle Class="subtitle-1">@item.Text</MListItemTitle>
                </MListItemContent>
            </MListItem>
        }
    </ChildContent>
</MListGroup>

<MListGroup PrependIcon="fas fa-cubes">
    <ActivatorContent>
        <MListItemTitle Class="subtitle-1">Presets</MListItemTitle>
    </ActivatorContent>
    <ChildContent>
        @foreach (var item in presets)
        {
            <MListItem Link Href=@item.Link>
                <MListItemIcon Class="mx-3">
                    <MIcon> fas fa-genderless </MIcon>
                </MListItemIcon>
                <MListItemContent Class="mx-3">
                    <MListItemTitle Class="subtitle-1">@item.Text</MListItemTitle>
                </MListItemContent>
            </MListItem>
        }
    </ChildContent>
</MListGroup>

@code {
    List<Item> basics = new List<Item>
    {
    new Item { Text= "Alert",Link ="/components/baics/alert" }
    };

    List<Item> presets = new List<Item>
    {
    new Item { Text= "Sweet Alert",Link ="/components/presets/sweet-alert" }
    };


    class Item
    {
        public string Text { get; set; } = "";
        public string Link { get; set; } = "";
    }
}
