<AuthorizeView>
    <Authorized>
        <MMenu OffsetX Left OffsetY>
            <ActivatorContent Context="_">
                <span>Hello, @context.User.Identity?.Name!</span>
                <MButton Icon Large><MIcon>mdi-account-circle-outline</MIcon></MButton>
            </ActivatorContent>
            <ChildContent>
                <MList Dense>
                    <MListItem Link>
                        <MListItemIcon>
                            <MIcon>far fa-envelope</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                Message
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    <MListItem Link Href="/Identity/Account/Manage">
                        <MListItemIcon>
                            <MIcon>far fa-user</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                Account
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    <MListItem Link Href="/Identity/Account/LogOut">
                        <MListItemIcon>
                            <MIcon>fas fa-sign-out-alt</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                Sign out
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                </MList>
            </ChildContent>
        </MMenu>
    </Authorized>
    <NotAuthorized>
        <MMenu OffsetX Left OffsetY>
            <ActivatorContent Context="_">
                <MButton Icon Large><MIcon>mdi-account-circle-outline</MIcon></MButton>
            </ActivatorContent>
            <ChildContent>
                <MList Dense>
                    <MListItem Link Href="/Identity/Account/Register">
                        <MListItemIcon>
                            <MIcon>fas fa-user-circle</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                <a href="Identity/Account/Register">Register</a>
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    <MListItem Link Href="/Identity/Account/LogOut">
                        <MListItemIcon>
                            <MIcon>fas fa-sign-in-alt</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                <a href="Identity/Account/Login">Sign in</a>
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                </MList>
            </ChildContent>
        </MMenu>
    </NotAuthorized>
</AuthorizeView>

