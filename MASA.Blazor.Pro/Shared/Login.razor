<AuthorizeView>
    <Authorized>
        <MMenu OffsetX Left OffsetY>
            <ActivatorContent Context="menuContext">
                <span>Hello, @context.User.Identity?.Name!</span>
                <MButton Icon Large @attributes="menuContext.Attrs"><MIcon>mdi-account-circle-outline</MIcon></MButton>
            </ActivatorContent>
            <ChildContent>
                <MList Dense>
                    <MListItem Link>
                        <MListItemIcon>
                            <MIcon>far fa-envelope</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                Message
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    <MListItem Link Href="/Identity/Account/Manage">
                        <MListItemIcon>
                            <MIcon>far fa-user</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                Account
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    <MListItem Link Href="/Identity/Account/LogOut">
                        <MListItemIcon>
                            <MIcon>fas fa-sign-out-alt</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                Sign out
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                </MList>
            </ChildContent>
        </MMenu>
    </Authorized>
    <NotAuthorized>
        <MMenu OffsetX Left OffsetY>
            <ActivatorContent Context="menuContext">
                 <div class="text-center border-left-solid" style="width:88px;">
                    <MAvatar  @attributes="menuContext.Attrs" Size=40>
                        <MImage Src="/img/avatar/avatar-s-20.jpg"></MImage>
                    </MAvatar>
                </div>
            </ActivatorContent>
            <ChildContent>
                <MList Dense>
                    <MListItem Link Href="/pages/authentication/register-v1">
                        <MListItemIcon>
                            <MIcon Size=20 Color="neutral-lighten-4">fas fa-user-circle</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                <span class="neutral-lighten-4--text">Register</span>
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    <MListItem Link Href="/pages/authentication/login-v1">
                        <MListItemIcon>
                            <MIcon Size=20 Color="neutral-lighten-4">fas fa-sign-in-alt</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                <span class="neutral-lighten-4--text">Sign in</span>
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                </MList>
            </ChildContent>
        </MMenu>
    </NotAuthorized>
</AuthorizeView>

