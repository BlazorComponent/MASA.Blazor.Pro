@inherits DemoCompontentBase
@inject List<NavCategory> NavCategorys

<MList Dense>
    <MListItem>
        <MIcon Color=purple>fas fa-seedling</MIcon>
        <h3 class="ml-6">MASA Blazor Pro</h3>
    </MListItem>

    @foreach (var navCategory in NavCategorys)
    {
        <MSubheader>@T(navCategory.Category)</MSubheader>
        @foreach (var nav in navCategory.Navs)
        {
            if (nav.Childs is not null)
            {
                <MListGroup ActiveClass="deep-purple lighten-5" PrependIcon="@nav.Icon">
                    <ActivatorContent>
                        <MListItemTitle Class="subtitle-1">@T(nav.Title)</MListItemTitle>
                    </ActivatorContent>
                    <ChildContent>
                        @foreach (var navChild in nav.Childs)
                        {
                            <MListItem ActiveClass="deep-purple lighten-5" Link Href="@navChild.Href">
                                <ItemContent>
                                    <MListItemIcon>
                                        <MIcon>@navChild.Icon</MIcon>
                                    </MListItemIcon>
                                    <MListItemContent>
                                        <MListItemTitle Class="subtitle-1">@T(navChild.Title)</MListItemTitle>
                                    </MListItemContent>
                                    @if (context.Active)
                                    {
                                        <div class="deep-purple" style="height:24px;width:3px"></div>
                                    }
                                </ItemContent>
                            </MListItem>
                        }

                    </ChildContent>
                </MListGroup>
            }
            else
            {
                <MListItem ActiveClass="deep-purple lighten-5" Link Href="@nav.Href">
                    <ItemContent>
                        <MListItemIcon>
                            <MIcon>@nav.Icon</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle Class="subtitle-1">@T(nav.Title)</MListItemTitle>
                        </MListItemContent>
                        @if (context.Active)
                        {
                            <div class="deep-purple" style="height:24px;width:3px"></div>
                        }
                    </ItemContent>
                </MListItem>
            }
        }
    }
</MList>

@code {
    public override string Name => nameof(Navigation);
}
